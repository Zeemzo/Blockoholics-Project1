{
   "compilerOptions": {
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "lib": [
         "es5",
         "es6"
      ],
      "module": "commonjs",
      "moduleResolution": "node",
      "sourceMap": true,
      "target": "es5",
      "outDir": "./build",
      "resolveJsonModule": true,
      "esModuleInterop": true  
   },
   "exclude": [
     "node_modules"
   ]
}